{% macro previousNextDates(href, previousDay, nextDay, _csrf, includeDatePicker, today, postUrl) %}
<nav role="navigation">
    <ul class="previous-next-navigation group">
        <li class="previous">
            <a href="{{ href }}?dateDay={{ previousDay.dateDay }}&dateMonth={{ previousDay.dateMonth }}&dateYear={{ previousDay.dateYear }}">
                <svg class="date-nav-svg-left" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#3891C4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
                {{ previousDay.formattedDate }}
                <span class="previous-day-day">{{ previousDay.day }}</span>

              </a>
        </li>
        {% if includeDatePicker %}
        <form class="desktop-dp" action="{{ postUrl }}" method="post">
            <div class="dp-wrapper">
                <div class="form-group">
                  <fieldset class="dp-fieldset">
                    <legend class="visually-hidden">Date</legend>
                    <div class="form-date">
                      <div class="form-group form-group-day reduced-margin-form-group">
                        <label class="form-label-bold" for="dateDay">Day</label>
                        <input class="form-control dp-input" id="dateDay" name="dateDay" type="number" pattern="[0-9]*" value="{{ today.dateDay }}" data-original="{{ today.dateDay }}">
                      </div>
                      <div class="form-group form-group-month reduced-margin-form-group">
                        <label class="form-label-bold" for="dateMonth">Month</label>
                        <input class="form-control dp-input" id="dateMonth" name="dateMonth" type="number" pattern="[0-9]*" value="{{ today.dateMonth }}" data-original="{{ today.dateMonth }}">
                      </div>
                      <div class="form-group form-group-year reduced-margin-form-group">
                        <label class="form-label-bold" for="dateYear">Year</label>
                        <input class="form-control dp-input" id="dateYear" name="dateYear" type="number" pattern="[0-9]*" value="{{ today.dateYear }}" data-original="{{ today.dateYear }}">
                      </div>
                    </div>
                    <input type="hidden" name="_csrf" value="{{ _csrf }}">
                    <input id="changeDate" type="submit" class="button dp-submit" name="" value="Go">
                  </fieldset>
                </div>
            </div>
        </form>
        {% endif %}
        <li class="next">
            <a href="{{ href }}?dateDay={{ nextDay.dateDay }}&dateMonth={{ nextDay.dateMonth }}&dateYear={{ nextDay.dateYear }}">{{ nextDay.formattedDate }}
            <svg class="date-nav-svg-right" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#3891C4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
            <span class="next-day-day">{{ nextDay.day }}</span>
          </a>
        </li>
    </ul>
</nav>
{% endmacro %}
